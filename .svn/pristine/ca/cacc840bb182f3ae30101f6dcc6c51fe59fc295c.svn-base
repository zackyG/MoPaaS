<com.mopaas_mobile.utils.InputMethodRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginlayout"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_bgcolor" >
    <LinearLayout
        android:id="@+id/logolayout"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/login_logolayout_paddingTop" 
	    android:layout_centerHorizontal="true"
	    android:gravity="center_horizontal">
	    	<ImageView
	        	android:id="@+id/logoimg" 
	        	android:src="@drawable/main_logo"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/inputlayout" 
	    android:layout_below="@+id/logolayout"
	    android:layout_marginTop="@dimen/login_inputlayout_marginTop" 
	    android:layout_centerHorizontal="true"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
    	android:orientation="vertical" 
    	android:gravity="center_horizontal">
	    
	    <EditText
	        android:id="@+id/edt_username"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:hint="@string/input_username" 
	        android:textColor="#dcf0fe"
	        android:textSize="@dimen/login_edtusername_textSize" 
	        android:inputType="textEmailAddress" 
	        android:background="@drawable/login_user" 
	        android:paddingLeft="@dimen/login_edtusername_paddingLeft"/>
	    <EditText
	        android:id="@+id/edt_password" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:textColor="#dcf0fe"  
	        android:inputType="textPassword"
	        android:textSize="@dimen/login_edtpassword_textSize" 
	        android:paddingLeft="@dimen/login_edtpassword_paddingLeft" 
	        android:layout_marginTop="@dimen/login_edtpassword_marginTop" 
	        android:background="@drawable/login_password" 
	        android:hint="@string/input_password"/>
		<Button
		    android:id="@+id/btn_login" 
		    android:layout_marginTop="@dimen/login_btnlogin_marginTop"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
	        android:textColor="#daeffe" 
	        android:background="@drawable/login_button"/>
	</LinearLayout>
</com.mopaas_mobile.utils.InputMethodRelativeLayout>
